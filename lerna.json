{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.0",
  "npmClient": "pnpm",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/examples/**",
        "**/tests/**"
      ]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/examples/**"
      ],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
