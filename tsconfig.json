{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Path Mapping (for monorepo) */
    "baseUrl": ".",
    "paths": {
      "@unilic/core": ["packages/core/src"],
      "@unilic/client": ["packages/js/src"],
      "@unilic/react": ["packages/react/src"]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/coverage",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
